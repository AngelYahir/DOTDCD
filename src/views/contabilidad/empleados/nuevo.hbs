<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Agregar Empleado <span class="fw-300"><i></i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10"
                        data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip"
                        data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10"
                        data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div id="metasAll">
                        <div class="row">
                            <div class="container" style="width: 100% !important;">
                                <form class="container"  enctype="multipart/form-data" method="post" action="/addEmployee">
                                    <h3 class="d-block mb-5 text-center pb-2"
                                        style="border-bottom: 1px solid rgb(190, 182, 182);">Datos Personales</h3>
                                    <div class="row mb-3">
                                        <div class="col-4 db-block">
                                            <span>Nombre(s) / Identificación</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                name="empleado_nombre" maxlength="20" required
                                                style="width:95% !important" placeholder="Ingresa el nombre" autofocus>
                                            <label for="fileInput">
                                                <i class="fal fa-upload"></i>
                                            </label>
                                            <input id="fileInput" type="file" style="display:none" name="ine">
                                        </div>
                                        <div class="col-4">
                                            <span>Apellido Paterno</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                name="empleado_paterno" maxlength="15" required
                                                style="width:95% !important" placeholder="Ingresa el apellido paterno">

                                        </div>
                                        <div class="col-4">
                                            <span>Apellido Materno</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                name="empleado_materno" maxlength="15" required
                                                style="width:95% !important" placeholder="Ingresa el apellido materno">

                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-4">
                                            <label>Sexo </label>
                                            <select class="form-control d-inline " style="width:95% !important"
                                                name="empleado_sexo_id">
                                                <option value="" selected></option>
                                                <option value="1" >Hombre</option>
                                                <option value="2">Mujer</option>

                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <label>Estado Civil</label>
                                            <select class="form-control d-inline " style="width:95% !important"
                                                name="empleado_estado_civil_id">
                                                <option value="" selected></option>
                                                <option value="1">Soltero</option>
                                                <option value="2">Casado</option>
                                                <option value="3">Divorciado</option>
                                                <option value="4">Separado</option>
                                                <option value="5">Concubinato</option>
                                                <option value="6">Union Libre</option>
                                                <option value="7">Otros</option>
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <span for="example-date">Fecha de Nacimiento / Acta de Nacimiento</span>
                                            <input class="form-control d-inline " style="width:95% !important"
                                                name="empleado_nacimiento" id="example-date" type="date" max="2005-01-01"
                                                 value="" required> <label for="fileInput">
                                                <i class="fal fa-upload"></i>
                                            </label>
                                            <input id="fileInput" type="file" style="display:none"
                                                name="actaNacimiento">


                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-4"> <span> CURP </span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                maxlength="19" required style="width:95% !important"
                                                placeholder="Ingresa el CURP" name="empleado_curp" required>
                                            <label for="fileInput">
                                                <i class="fal fa-upload"></i>
                                            </label>
                                            <input id="fileInput" type="file" style="display:none" name="curp">
                                        </div>

                                        <div class="col-4">
                                            <span> Comprobante de Vacunación </span>


                                            <input id="fileInput" type="file" style="" name="covid">
                                        </div>
                                        <div class="col-4">
                                            <span> Fotografía </span><br>

                                            <input id="fileInput" type="file" style=" width:95% !important" name="foto">
                                        </div>
                                    </div>
                                    <div class="row mb-6">
                                        <div class="col-4"><span>Dirección / Comprobante</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                style="width:95% !important"
                                                placeholder="Ingresa la dirección de domicilio"
                                                name="empleado_direccion">
                                            <label for="fileInput">
                                                <i class="fal fa-upload"></i>
                                            </label>
                                            <input id="fileInput" type="file" style="display:none" name="domicilio">
                                        </div>
                                        <div class="col-4"><span>Teléfono</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                style="width:95% !important" placeholder="Ingresa el teléfono"
                                                name="empleado_telefono">

                                        </div>
                                         <div class="col-4"><span>Correo</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                style="width:95% !important" placeholder="Ingresa el e-mail"
                                                name="empleado_email">

                                        </div>

                                    </div>
                                    <h3 class="mb-6 mt-1 text-center pb-2"
                                        style="border-bottom: 1px solid rgb(190, 182, 182);">Contacto de emergencia</h3>

                                    <div class="row mb-6">
                                        <div class="col-6">
                                            <span> Nombre </span><br>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                style="width:95% !important" placeholder="Nombre"
                                                name="empleado_contacto_emergencia_nombre" required>
                                        </div>
                                        <div class="col-6">
                                            <span> Telefono </span><br>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                style="width:95% !important" placeholder="Nombre"
                                                name="empleado_contacto_emergencia_telefono">
                                        </div>
                                    </div>



                                    <h3 class="mb-6 mt-1 text-center pb-2"
                                        style="border-bottom: 1px solid rgb(190, 182, 182);">Datos Laborales</h3>

                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <span>Número de IMSS</span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                name="empleado_imss" style="width:95% !important"
                                                placeholder="Ingresa el número de IMSS ">
                                            <label for="fileInput">
                                                <i class="fal fa-upload"></i>
                                            </label>
                                            <input id="fileInput" type="file" style="display:none" name="numeroImss" >
                                        </div>
                                        <div class="col-4">
                                            <span> Sueldo Reportado IMSS </span>
                                            <input type="text" id="sueldoDiario" class="form-control d-inline "
                                                name="empleado_sueldo_imss" style="width:95% !important"
                                                placeholder="Ingresa el sueldo reportado al IMSS">
                                        </div>
                                        <div class="col-4">
                                            <span> Cotización Diaria IMSS </span>
                                            <input type="text"  class="form-control d-inline"
                                                name="empleado_diario" style="width:95% !important"
                                                placeholder="Ingresa la cotización diaria IMSS" onchange="cDiaria()" id="sueldo">
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <span>Sueldo por Periodo</span>
                                            <input type="text"  class="form-control d-inline"
                                                name="empleado_sueldo" style="width:95% !important"
                                                placeholder="Ingresa sueldo por periodo " >
                                        </div>
                                        <div class="col-4">
                                            <span> Cuenta de Depósito IMSS </span>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                name="empleado_cuenta_deposito" style="width:95% !important"
                                                placeholder="Ingresa la cuenta de depósito IMSS">
                                        </div>
                                        <div class="col-4">
                                            <span> RFC / Constancia de Situación Fiscal </span>
                                            <input type="text" id="simpleinput" class="form-control d-inline "
                                                name="empleado_rfc" required style="width:95% !important"
                                                placeholder="Ingresa el RFC">
                                            <label for="fileInput">
                                                <i class="fal fa-upload"></i>
                                            </label>
                                            <input id="fileInput" type="file" style="display:none" name="rfc">
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <span>Tipo de Empleado</span>
                                            <select class="custom-select form-control" class="form-control d-inline"
                                                name="empleado_actividad_tipo" style="width:95% !important">
                                                <option value=""></option>
                                                <option value="0">No Aplica</option>
                                                <option value="1">Operación</option>
                                                <option value="2">Staff</option>
                                                <option value="3">Corporativo</option>
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <label>Tipo Indirecto</label>
                                            <select class="form-control d-inline " style="width:95% !important"
                                                name="tipo_indirecto_id" >
                                                <option value=""></option>
                                                {{#each tipoEmpleado}}
                                                    <option value="{{id}}">{{nombre}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <label>Puesto</label>
                                            <select class="form-control d-inline " style="width:95% !important"
                                                name="empleado_puesto_id">
                                                <option value=""></option>
                                                {{#each puesto}}
                                                    <option value="{{id}}">{{nombre}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <label>Sucursal</label>
                                            <select class="form-control d-inline " style="width:95% !important"
                                                name="sucursal_id">
                                                <option value="" selected></option>
                                                {{#each sucursal}}
                                                    <option value="{{id}}">{{nombre}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <label>Perfil para App</label>
                                            <select class="form-control d-inline " style="width:95% !important"
                                                name="empleado_perfil_app">
                                                <option value="" disabled selected></option>
                                                <option value="1" >Ayudante</option>
                                                <option value="2" >Técnico</option>
                                                <option value="3" >Oficinas</option>
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <span for="example-date">Fecha de Ingreso</span>
                                            <input class="form-control d-inline " style="width:95% !important" required
                                                id="example-date" type="date" name="empleado_entrada" value=""
                                                >
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4"> <span> Carta de Recomendación 1</span>
                                            
                                            
                                            <input id="fileInput" type="file"  name="carta1">
                                        </div>
                                        <div class="col-4"><span> Carta de Recomendación 2 </span>
                                            
                                            
                                            <input id="fileInput" type="file"  name="carta2">
                                        </div>
                                        <div class="col-4">
                                            <span> Currículum </span><br>
                                            
                                            <input id="fileInput" type="file"  name="curriculum">

                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <label class="form-label">Periodo</label>
                                            <select class="custom-select form-control" name="empleado_periodo_id">
                                                <option value=""></option>
                                                {{#each period}}
                                                    <option value="{{id}}">{{nombre}}</option>
                                                {{/each}}
                                                        
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <label>Empresa Pagadora</label>
                                            <select class="form-control d-inline "
                                                style="width:95% !importan; cursor:pointer" name="empleado_empresa_id">
                                                <option value=""></option>
                                                {{#each empresa}}
                                                    <option value="{{id}}">{{nombre}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-4">
                                            <label>Centro de Costo</label>
                                             <select class="form-control d-inline " style="width:95% !important"
                                                name="empleado_centrodecostos_id">
                                                <option value=""></option>
                                                {{#each centroCostos}}
                                                    <option value="{{id}}">{{nombre}}</option>
                                                {{/each}}
                                            </select>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-4"></div>
                                        <div class="col-4">
                                            
                                        </div>
                                        <div class="col-4"></div>

                                    </div>
                                    <h3 class="mb-6 mt-1 text-center pb-2 mt-6" 
                                        style="border-bottom: 1px solid rgb(190, 182, 182);">ERP Legacy</h3>

                                    <div class="row mb-6">
                                        <div class="col-6">
                                            <span> Usuario </span><br>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                style="width:95% !important" placeholder=""
                                                name="empleado_usuario" value="{{empleado.empleado_usuario}}">
                                        </div>
                                        <div class="col-6">
                                            <span> Contraseña </span><br>
                                            <input type="text" id="simpleinput" class="form-control d-inline"
                                                style="width:95% !important" placeholder=""
                                                name="empleado_password" value="{{empleado.empleado_password}}">
                                        </div>
                                    </div>

                                    <div class="row mt-6">
                                        <div class="col-4"></div>
                                        <div class="col-4">
                                            <button type="submit"
                                                class="btn-outline-info btn-lg w-100 ">Guardar</button>
                                        </div>
                                        <div class="col-4"></div>


                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'scripts'}}
<script>
    function cDiaria(){
        let sueldo = document.getElementById('sueldo').value;

        let sueldoDiario = (sueldo / 1.0452) * 15;

        document.getElementById('sueldoDiario').value = sueldoDiario.toFixed(2);
    }
</script>
{{/section}}