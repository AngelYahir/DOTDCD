<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.5/dist/sweetalert2.all.min.js"></script>

<script>



		function showModalDel(id) {
		swal.fire({
			title: '¿Estas seguro?',
			text: "Estás a punto de dar de baja a un empleado! \n ¿Deseas continuar?",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: 'Si, dar de baja!'
		}).then((result) => {
			if (result.isConfirmed) {
				$.ajax({
					type: 'DELETE',
					url: '/dwnEmployee/' + id,
					dataType: 'json',
					success: function (resp) {
						if (resp.status == 200) {
							swal.fire({
								title: "El empleado ha sido dado de baja",
								text: resp.message,
								preConfirm() {
									location.reload();
								}
							})
						} else {
							swal.fire("Error!", resp.message, "error");
						}
					},
					error: function (resp) {
						swal.fire("Error!", resp.message, "error");
					}
				});
			}
		})
	}

    // Data table
	$(document).ready(function () {


		// initialize datatable
		$('#dt-basic-example').dataTable(
			{
				data: [{{#each empleados}} [ '{{empleado_nombre}}', '{{empleado_paterno}}', '{{empleado_materno}}', '{{empleado_imss}}', '{{empleado_rfc}}', '{{empleado_nacimiento}}', '{{empleado_entrada}}', '{{costos}}', '{{empresa}}', '{{sucursal}}', '<a class="btn btn-outline-primary w-100 mb-2" href="/dashboard/contabilidad/empleados/{{empleado_id}}"><i class="fal fa-chevron-square-up"></i></a> <a class="btn btn-outline-success w-100 mb-2" href="/dashboard/contabilidad/empleados/contrato/{{empleado_id}}"><i class="fal fa-file-alt"></i></a> <button class="btn btn-outline-danger w-100" onclick="showModalDel({{empleado_id}})" ><i class="fal fa-arrow-square-down"></i></button>' ], {{/each}}],
				responsive: true,
				lengthChange: false,
				dom:
					"<'row mb-3'<'col-sm-12 col-md-6 d-flex align-items-center justify-content-start'f><'col-sm-12 col-md-6 d-flex align-items-center justify-content-end'lB>>" +
					"<'row'<'col-sm-12'tr>>" +
					"<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
				buttons: [

					{
