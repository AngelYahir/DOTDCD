<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Editar Disciplina <span class="fw-300"><i></i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10"
                        data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip"
                        data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10"
                        data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div id="metasAll">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-3"></div>
                                <div class="col-md-6">
                                    <!-- Formulario  -->
                                    <form class="form-group container" method="post" action="/updDisciplina/{{disciplina.familia_id}}">
                                        <label class="form-label text-center" for="simpleinput">
                                            <h3>Editar Disciplina</h3>
                                        </label><br/>
                                        <span>Nombre</span>
                                        <input type="text" id="simpleinput" class="form-control"
                                            placeholder="Ingresa el nombre de la disciplina" name="familia_descripcion" autofocus value="{{disciplina.familia_descripcion}}"><br/>
                                        <span>Clave</span>
                                        <input type="text" id="simpleinput" class="form-control"
                                            placeholder="Ingresa la clave de la disciplina" name="familia_clave" value="{{disciplina.familia_clave}}"><br><br>
                                        
                                        <span>Estatus</span>
                                        <select name="familia_estatus_baja" class="form-control" id="">
                                            <option value="0" {{#if disciplina.familia_estatus_baja }}selected{{/if}}>Activo</option>
                                            <option value="1" {{#if disciplina.familia_estatus_baja }}selected{{/if}}>Inactivo</option>
                                        </select>

                                        <br><br>
                                        <div class="row mt-5">
                                                <div class="col-md-6">
                                                    <a href="/dashboard/administracion/disciplina/buscar"><button type="button" class="btn-outline-danger btn-lg btn-block">Cancelar</button></a>
                                                </div>
                                                <div class="col-md-6">
                                                    <button type=""
                                                        class="btn-outline-info btn-lg btn-block ">Actualizar</button>
                                                </div>
                                            </div>
                                    </form>
                                    <div class="col-md-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>