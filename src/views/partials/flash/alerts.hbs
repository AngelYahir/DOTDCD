{{#if error}}
<div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times"></i></span>
    </button>

    <div class="d-flex align-items-center">

        <div class="alert-icon">
            <span class="icon-stack icon-stack-md">
                <i class="base-7 icon-stack-3x color-danger-900"></i>
                <i class="{{iconPrefix}} fa-times icon-stack-1x text-white"></i>
            </span>
        </div>

        <div class="flex-1 pl-1">
            <span class="h2">
                {{error.[0].title}}
            </span>
            <br>
            {{error.[0].message}}
        </div>

    </div>
</div>
{{/if}}
{{#if success}}
<div class="alert alert-success alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times"></i></span>
    </button>

    <div class="d-flex align-items-center">

        <div class="alert-icon width-8">
            <span class="icon-stack icon-stack-md">
                <i class="base-7 icon-stack-3x color-success-600"></i>
                <i class="fal fa-check icon-stack-1x text-white"></i>
            </span>
        </div>

        <div class="flex-1 pl-1">
            <span class="h2 color-success-600">
                {{success.[0].title}}
            </span>
            <br>
            {{success.[0].message}}
        </div>

    </div>
</div>
{{/if}}