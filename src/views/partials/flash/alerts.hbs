{{#if error}}
<div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="fal fa-times-circle"></i></span>
    </button>

    <div class="d-flex align-items-center">

        <div class="alert-icon">
            <span class="icon-stack icon-stack-md">
                <i class="base-7 icon-stack-3x color-danger-900"></i>
                <i class="{{iconPrefix}} fal fa-times icon-stack-1x text-white"></i>
            </span>
        </div>

        <div class="flex-1 pl-1">
            <span class="h2">
                {{error.[0].title}}
            </span>
            <br>
            {{error.[0].message}}
        </div>

    </div>
</div>
{{/if}}
{{#if success}}
<div class="alert alert-success alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times"></i></span>
    </button>

    <div class="d-flex align-items-center">

        <div class="alert-icon width-8">
            <span class="icon-stack icon-stack-md">
                <i class="base-7 icon-stack-3x color-success-600"></i>
                <i class="fal fa-check icon-stack-1x text-white"></i>
            </span>
        </div>

        <div class="flex-1 pl-1">
            <span class="h2 color-success-600">
                {{success.[0].title}}
            </span>
            <br>
            {{success.[0].message}}
        </div>

    </div>
</div>
{{/if}}
{{#if infoSign}}
<div class="alert alert-info alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times"></i></span>
    </button>

    <div class="d-flex align-items-center">

        <div class="alert-icon width-8">
            <span class="icon-stack icon-stack-md">
                <i class="fal fa-exclamation-triangle"></i>
            </span>
        </div>

        <div class="flex-1 pl-1">
            <span class="h2">
                {{infoSign.[0].title}}
            </span>
            <br>
            {{infoSign.[0].message}}
        </div>

    </div>
</div>
{{/if}}

{{#if contratos}}
<div class="alert border-info bg-transparent text-info fade show" role="alert">
    <div class="d-flex align-items-center">
        <div class="alert-icon">
            <i class="fal fa-exclamation-triangle text-danger"></i>
        </div>
        <div class="flex-1">
            <span class="h3 m-0 fw-700">La Temporada de Renovación de Contratos está por Comenzar</span>
        </div>
        <a type="button" class="btn btn-info btn-pills btn-sm btn-w-m fw-700  mr-1" href="/dashboard/contabilidad/empleados/ver/contratos">
            Ir a Contratos
        </a>
        <button type="button" class="btn btn-danger btn-pills btn-sm btn-w-m fw-700" data-dismiss="alert" aria-label="Close">
            Enterado
        </button>
    </div>
</div>
{{/if}}